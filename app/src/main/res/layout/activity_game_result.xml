<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bg_result"
    tools:context="com.awesomekids.android.quickcharades.GameResultActivity"
    android:weightSum="1">


    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="350dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Difficulty:"
                        android:id="@+id/text_view_diff"
                        android:layout_gravity="left"
                        android:layout_weight="7"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textIsSelectable="true"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Length:"
                        android:id="@+id/text_view_length"
                        android:layout_gravity="left"
                        android:layout_weight="7"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Category:"
                        android:id="@+id/text_view_category"
                        android:layout_gravity="left"
                        android:layout_weight="7"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="-10dp"
                android:layout_marginLeft="0dp">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Score:"
                        android:id="@+id/text_view_score"
                        android:layout_gravity="left"
                        android:layout_weight="4"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Highest Streak:"
                        android:id="@+id/text_view_streak"
                        android:layout_gravity="left"
                        android:layout_weight="2.6"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Correct Questions:"
                        android:id="@+id/text_view_question"
                        android:layout_gravity="left"
                        android:layout_weight="2.6"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Total Time:"
                        android:id="@+id/text_view_time_elapsed"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:focusableInTouchMode="true"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_weight="7" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_weight="3"
            android:id="@+id/end" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="94dp"
            android:gravity="bottom"
            android:weightSum="1">

            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/from_result_to_menu_button"
                android:onClick="onGoMainMenuButtonClick"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true" />

            <Button
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:id="@+id/play_again_button"
                android:onClick="onPlayAgainButtonClick"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/from_result_to_menu_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
