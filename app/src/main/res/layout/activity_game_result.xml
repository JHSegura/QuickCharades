<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.awesomekids.android.quickcharades.GameResultActivity">


    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VICTORY"
        android:id="@+id/text_view_result"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Difficulty:"
                    android:id="@+id/text_view_diff"
                    android:layout_gravity="left"
                    android:layout_weight="3.5"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/text_diff_value"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Length:"
                    android:id="@+id/text_view_length"
                    android:layout_gravity="left"
                    android:layout_weight="3.8"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/text_length_value"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Category:"
                    android:id="@+id/text_view_category"
                    android:layout_gravity="left"
                    android:layout_weight="3.5"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/text_category_value"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Game Mode:"
                    android:id="@+id/text_view_mode"
                    android:layout_gravity="left"
                    android:layout_weight="3"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/text_mode_value"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Score:"
                    android:id="@+id/text_view_score"
                    android:layout_gravity="left"
                    android:layout_weight="4"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/text_score_value"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Total Time:"
                    android:id="@+id/text_view_time_elapsed"
                    android:layout_gravity="left"
                    android:layout_weight="3.2"
                    android:layout_marginLeft="35dp"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/text_total_time_value"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Correct Questions:"
                    android:id="@+id/text_view_question"
                    android:layout_gravity="left"
                    android:layout_weight="2.6"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0/0"
                    android:id="@+id/text_question_value"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Highest Streak:"
                    android:id="@+id/text_view_streak"
                    android:layout_gravity="left"
                    android:layout_weight="2.6"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/text_streak_value"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Again"
                android:id="@+id/play_again_button"
                android:layout_weight="3"
                android:onClick="onPlayAgainButtonClick"/>

            <Space
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Menu"
                android:id="@+id/from_result_to_menu_button"
                android:layout_weight="3"
                android:onClick="onGoMainMenuButtonClick"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
